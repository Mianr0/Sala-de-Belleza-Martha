---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/src/assets/favicon.svg" />
    <title>
      {title}
    </title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import "tailwindcss";
  @font-face {
    font-family: "Allura";
    src: url("/public/fonts/Allura-Regular.ttf");
    font-weight: normal;
    font-style: bold;
    font-display: swap;
  }

  :root {
    --header-h: 10vw;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth; /* opcional */
    scroll-padding-top: var(--header-h);
  }
</style>
